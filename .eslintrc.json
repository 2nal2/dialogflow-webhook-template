{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
    },
    "ignorePatterns": ["build/*"],
    "settings": {
        "import/extensions": [".js",".ts"],
        "import/parsers": {
          "@typescript-eslint/parser": [".ts"]
         },
         "import/resolver": {
             "node": {
                 "extensions": [".js",".ts"]
             }
         }
    }
}